{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "microphone=(self), camera=(self), geolocation=(self), browsing-topics=()"
        }
      ]
    },
    {
      "source": "/api/health",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60, s-maxage=30"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        }
      ]
    },
    {
      "source": "/api/files/audio/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, immutable"
        },
        {
          "key": "Accept-Ranges",
          "value": "bytes"
        },
        {
          "key": "Content-Disposition",
          "value": "inline"
        }
      ]
    },
    {
      "source": "/_meta.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=300"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://cdn.tailwindcss.com https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.tailwindcss.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob:; connect-src 'self' https://api.anthropic.com; frame-src 'self';"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/share/:token*",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*Mobile.*"
        }
      ],
      "destination": "/mobile/share/:token*",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/share/validate",
      "destination": "/api/share/validate"
    }
  ],
  "functions": {
    "app/api/health/route.ts": {
      "memory": 512,
      "maxDuration": 30
    },
    "app/api/tts/route.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "app/api/audio/job/route.ts": {
      "memory": 1024,
      "maxDuration": 300
    },
    "app/api/files/[...path]/route.ts": {
      "memory": 256,
      "maxDuration": 30
    },
    "app/api/assistant/health/route.ts": {
      "memory": 256,
      "maxDuration": 15
    },
    "app/api/assistant/chat/route.ts": {
      "memory": 512,
      "maxDuration": 60
    },
    "app/api/share/create/route.ts": {
      "memory": 256,
      "maxDuration": 10
    },
    "app/api/share/email/route.ts": {
      "memory": 512,
      "maxDuration": 30
    },
    "app/api/share/validate/route.ts": {
      "memory": 128,
      "maxDuration": 5
    },
    "app/api/storage/**/route.ts": {
      "memory": 512,
      "maxDuration": 30
    },
    "app/api/cleanup/route.ts": {
      "memory": 256,
      "maxDuration": 300
    }
  }
}