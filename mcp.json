{
  "mcpServers": {
    "github": {
      "command": "$HOME/bin/mcp-servers/node_modules/.bin/mcp-github",
      "args": [],
      "type": "stdio",
      "env": {},
      "timeout": 60000,
      "description": "GitHub API integration for repository management"
    },
    "filesystem": {
      "command": "$HOME/bin/mcp-servers/node_modules/.bin/mcp-server-filesystem",
      "args": ["$HOME"],
      "type": "stdio",
      "env": {},
      "timeout": 30000,
      "description": "Filesystem operations with safety limits"
    },
    "fetch": {
      "command": "npx",
      "args": ["fetch-mcp"],
      "env": { "FETCH_TIMEOUT": "30000", "FETCH_MAX_REDIRECTS": "5" },
      "timeout": 45000,
      "description": "HTTP fetch utility"
    },
    "duckduckgo-search": {
      "command": "npx",
      "args": ["duckduckgo-mcp"],
      "env": { "SEARCH_SAFE": "moderate", "SEARCH_REGION": "wt-wt" },
      "timeout": 30000,
      "description": "Lightweight web search"
    },
    "playwright": {
      "command": "$HOME/bin/mcp-servers/node_modules/.bin/mcp-server-puppeteer",
      "args": [],
      "type": "stdio",
      "env": {},
      "timeout": 120000,
      "description": "Headless browser automation"
    },
    "firecrawl": {
      "command": "npx",
      "args": ["firecrawl-mcp"],
      "env": {},
      "timeout": 90000,
      "description": "Optional web crawl + extract"
    },
    "libretranslate": {
      "command": "npx",
      "args": ["-y", "libretranslate-mcp@latest"],
      "type": "stdio",
      "env": {},
      "timeout": 120000,
      "description": "FOSS translation service"
    },
    "quran-api": {
      "command": "npx",
      "args": ["-y", "quran-mcp-server@latest"],
      "type": "stdio",
      "env": { "VERBOSE_MODE": "true" },
      "timeout": 60000,
      "description": "Qur'an verses & reference checks"
    },
    "memory": {
      "command": "$HOME/bin/mcp-servers/node_modules/.bin/mcp-server-memory",
      "args": [],
      "type": "stdio",
      "env": {},
      "timeout": 30000,
      "description": "Lightweight project memory"
    }
  },
  "globalEnv": {
    "LOG_LEVEL": "info",
    "MCP_TIMEOUT": "60000",
    "NODE_ENV": "production",
    "CACHE_TTL": "3600",
    "MAX_CONCURRENT_REQUESTS": "10"
  },
  "defaultServer": "filesystem",
  "serverAliases": {
    "git": "github",
    "fs": "filesystem",
    "http": "fetch",
    "search": "duckduckgo-search",
    "browser": "playwright",
    "crawl": "firecrawl",
    "translate": "libretranslate",
    "quran": "quran-api",
    "mem": "memory"
  },
  "security": {
    "allowedDomains": ["*.github.com","duckduckgo.com"],
    "blockPrivateNetworks": true,
    "maxRequestSize": "10MB",
    "rateLimiting": { "enabled": true, "requestsPerMinute": 60 }
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "file": "/tmp/mcp-cursor.log",
    "maxFileSize": "50MB",
    "maxFiles": 5,
    "logRequests": true,
    "logResponses": false
  },
  "cache": { "enabled": true, "ttl": 3600, "maxSize": "100MB", "type": "memory" },
  "healthChecks": { "enabled": true, "interval": 300000, "timeout": 10000, "retries": 2 },
  "fallbacks": { "search": ["duckduckgo-search"], "git": ["github"] }
}
